        <form action="#" method="get" style="margin-left: auto;">
            <label for="language-select" style="display: none;">भाषा चुनें</label>
            <select id="language-select" name="language" onchange="switchLanguage(this)" style="padding: 5px; font-size: 16px; border-radius: 5px;">
                <option value="hindi" selected>हिंदी</option>
                <option value="english">English</option>
                <option value="french">Français</option>
                <option value="spanish">Español</option>
            </select>
        </form>
    </header>
    
    <script>
        function updateNavLinks(language) {
            const navLinks = document.getElementById("nav-links");
            navLinks.innerHTML = ""; // Clear existing links

            const links = {
                hindi: [
                    { href: "homepage_hi.html", label: "मुख्य पृष्ठ" },
                    { href: "sustainability_hi.html", label: "स्थिरता" },
                    { href: "transportation_hi.html", label: "परिवहन" },
                    { href: "technology_hi.html", label: "प्रौद्योगिकी" },
                ],
                english: [
                    { href: "homepage.html", label: "Home" },
                    { href: "sustainability.html", label: "Sustainability" },
                    { href: "transportation.html", label: "Transportation" },
                    { href: "technology.html", label: "Technology" },
                ],
                french: [
                    { href: "homepage_fr.html", label: "Accueil" },
                    { href: "sustainability_fr.html", label: "Durabilité" },
                    { href: "transportation_fr.html", label: "Transport" },
                    { href: "technology_fr.html", label: "Technologie" },
                ],
                spanish: [
                    { href: "homepage_es.html", label: "Inicio" },
                    { href: "sustainability_es.html", label: "Sostenibilidad" },
                    { href: "transportation_es.html", label: "Transporte" },
                    { href: "technology_es.html", label: "Tecnología" },
                ],
            };

            links[language].forEach(link => {
                const li = document.createElement("li");
                const a = document.createElement("a");
                a.href = link.href;
                a.textContent = link.label;
                a.setAttribute("aria-label", `Go to ${link.label}`);
                li.appendChild(a);
                navLinks.appendChild(li);
            });
        }

        function switchLanguage(select) {
            const language = select.value;
            updateNavLinks(language);

            if (language === "hindi") {
                location.href = "homepage_hi.html";
            } else if (language === "english") {
                location.href = "homepage.html";
            } else if (language === "french") {
                location.href = "homepage_fr.html";
            } else if (language === "spanish") {
                location.href = "homepage_es.html";
            }
        }

        const currentLanguage = location.href.includes("_hi")
            ? "hindi"
            : location.href.includes("_fr")
            ? "french"
            : location.href.includes("_es")
            ? "spanish"
            : "english";

        document.getElementById("language-select").value = currentLanguage;
        updateNavLinks(currentLanguage);
    </script>

